colorscheme CoolGlow

set guifont=PanicSans:h11
set autoindent
set smartindent

set guioptions-=T
"set up status line
set statusline=%F%m%r%h%w\ %=[Type=%Y]\ [POS=%l,%v][%p%%]\ [LEN=%L]
"always show status line
set laststatus=2
"show line numbers
set number
set autowrite
"i like to undo
set undolevels=500
"show filename in tabs
set guitablabel=%t
"bells are for the weak
set noerrorbells
set novisualbell
"wrapping is annoying
set nowrap

